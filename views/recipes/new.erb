<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<div>
  <h1>New Recipe</h1>
  <form id="recipe-form" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required></br>
    <label for="feeds">Feeds:</label>
    <input type="text" placeholder="10" id="feeds" name="feeds" required></br>
    <label for="time">Time required:</label>
    <input type="text" id="time" name="time"></br>
    <div id="ingredients">
      <h2>Ingredients</h2>
      <div class="ingredient-group">
        <input placeholder="1" type="text" name="ingredients[]qty" required>
        <select name="ingredients[]unit">
          <option value="Cup">Cup</option>
          <option value="Pound">Pound</option>
        </select>
        <input class="ml" type="text" placeholder="tomatoes" name="ingredients[]name" required></br>
      </div>
    </div>
    <button id="add-ingredient-button">Add another ingredient</button>
    <div id="instructions-group">
      <h2>Instructions</h2>
      <textarea form="recipe-form" name="instructions" id ="instructions-textarea"></textarea>
    </div>
    <button>Add Recipe</button>
  </form>
</div>

<style>
.ingredient-group { display: flex; margin-bottom: 10px; }
.ingredient-group input:nth-child(1) { width: 30px; }
.ingredient-group input:nth-child(3) { margin-left: 10px }
.ingredient-group button { margin-left: 10px }
.ingredient-group select { margin-left: 10px; }
textarea {
  min-width: 100%;
  max-width: 100%;
  min-height: 400px;
}
form button { margin-top: 10px; }
</style>

<script src="https://cdn.quilljs.com/1.3.6/quill.js">
</script>
<script>
  (function() {
    let numIngredients = 1;
    const units = ["Cup", "Pound"];

    const run = () => {
      setHandlers();
    }

    const setHandlers = () => {
      document.getElementById("add-ingredient-button")
        .addEventListener("click", event => {
          event.preventDefault();
          addIngredientInput();
        });
    }

    const removeIngredient = id => {
      let element = document.getElementById(id);
      element.parentNode.removeChild(element);
      numIngredients -= 1;
    }

    const addIngredientInput = () => {
      numIngredients += 1;
      const container = document.createElement("div");
      container.setAttribute("id", `ingredient-group-${numIngredients}`);
      const parentIngredientsContaienr = document.getElementById("ingredients");
      parentIngredientsContaienr.appendChild(container);
      container.setAttribute("class", "ingredient-group");

      const qtyInput = document.createElement("input");
      qtyInput.setAttribute("name", "ingredients[]qty");
      qtyInput.setAttribute("placeholder", "1");
      container.appendChild(qtyInput);

      const unitInput = document.createElement("select");
      unitInput.setAttribute("name", "ingredients[]unit");
      container.appendChild(unitInput);

      for(let i =0; i<units.length; i++) {
        let unitText = units[i];
        let option = document.createElement("option");
        option.setAttribute("value", unitText);
        option.innerHTML = unitText;
        unitInput.appendChild(option);
      }

      const nameInput = document.createElement("input");
      nameInput.setAttribute("name", "ingredients[]name");
      nameInput.setAttribute("placeholder", "carrots");
      container.appendChild(nameInput);

      const removeButton = document.createElement("button");
      removeButton.innerHTML = "Remove";
      removeButton.addEventListener("click", event => {
        event.preventDefault();
        removeIngredient(`ingredient-group-${numIngredients}`);
      });
      container.appendChild(removeButton);
    }

    run();

  })();

</script>
